<UserControl x:Class="ArgonVisualX2.EditableText"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ArgonVisualX2"
             mc:Ignorable="d">
    <Grid>
        <TextBlock x:Name="EditableTextBlock" Text="{Binding Path=Text, RelativeSource={RelativeSource AncestorType=local:EditableText}}"></TextBlock>
        <TextBox x:Name="EditableTextBox" Text="{Binding Path=Text, RelativeSource={RelativeSource AncestorType=local:EditableText}}" Visibility="Hidden"></TextBox>
    </Grid>
</UserControl>
